{
  // "layer": "top", // Waybar at top layer
  "position": "bottom", // Waybar position (top|bottom|left|right)
  // "height": 14, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width

  // Choose the order of the modules
  "modules-left": ["sway/workspaces", "sway/mode", "sway/window"],
  // "modules-center": ["keyboard-state"],
  "modules-right": [
    "custom/arch_update",
    "memory",
    "network",
    "pulseaudio",
    "battery",
    "clock",
    "idle_inhibitor",
    "keyboard-state",
    "tray"
  ],

  // Modules configuration
  "sway/mode": {
    "format": "{}"
  },
  "custom/arch_update": {
    "format": "<span color='#589df6'>ï€¡</span>{}",
    "interval": 30,
    "exec": "~/.config/i3blocks/bin/arch_update.py -b '#e4e4e4' -u '#e4e4e4' -q"
  },
  "custom/disk_home": {
    "format": "[HOME] {} ",
    "interval": 30,
    "exec": "df -h --output=avail $HOME | tail -1 | tr -d ' '"
  },
  "custom/disk_root": {
    "format": "[ROOT {}]",
    "interval": 30,
    "exec": "df -h --output=avail / | tail -1 | tr -d ' '"
  },
  "temperature": {
    // "thermal-zone": 2,
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    "format-critical": "{temperatureC}Â°C {icon}"
    // "fzormat": "<span color='#e88939'>{icon}</span> {temperatureC}Â°C"
    // "format-icons": ["ï«", "ï‹‰", "ï©"]
  },
  "cpu": {
    "format": "[cpu {usage}%]",
    "tooltip": false
  },
  "memory": {
    "format": "[ram {used:0.1f}G]"
  },
  "custom/mail": {
    "format": "[MAIL] {}",
    "interval": 30,
    "exec": "notmuch count tag:flagged OR tag:inbox AND NOT tag:killed"
  },
  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    // "format-wifi": "{icon} ï„¹ {bandwidthUpBytes} ï„º {bandwidthDownBytes}",
    "format-wifi": "[{essid} {signalStrength}%]",
    "format-ethernet": "[ETH ifname}]",
    "tooltip-format": "{ipaddr} ï„¹ {bandwidthUpBits} ï„º {bandwidthDownBits}",
    "tooltip-format": "{ifname} via {gwaddr}",
    "format-linked": "[{ifname} (No IP)]",
    "format-disconnected": "[Disconnected âš  {ifname}]"
    // "format-alt": "[{ifname}: {ipaddr}/{cidr}]"
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "[BRIGHT] {percent}%"
    // "format-icons": ["ğŸ”…", "ğŸ”†"]
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "[vol {volume}% {format_source}]",
    "format-muted": "[vol 0% mic {volume}%]",
    "format-bluetooth": "<span color='#878bff'>[bt {volume}% {format_source}]</span>",
    "format-bluetooth-muted": "[bt 0% {format_source}]",

    "format-source": "mic {volume}%",
    "format-source-muted": "mic 0%",

    // "format-icons": {
    //   "headphones": "ï€¥",
    //   "handsfree": "ï–",
    //   "headset": "ï–",
    //   "phone": "ï‚•",
    //   "portable": "ï‚•",
    //   "car": "ï†¹",
    //   "default": ["ğŸ”ˆ", "ğŸ”‰", "ğŸ”Š"]
    // },
    "on-click": "pavucontrol",
    "on-click-right": "ponymix -N -t source toggle"
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "binding-keys": [5],
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ï€£",
      "unlocked": "ï‚œ"
    }
    // "device-path": "/dev/input/event5"
  },
  "clock": {
    "format": "[{:%a %d %b, %I:%M %p}]",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  },
  "battery": {
    "states": {
      // "good": 95,
      "warning": 20,
      "critical": 10
    },
    "format": "[bat {capacity}%]",
    "format-charging": "[charge {capacity}%]",
    "format-plugged": "[bat {capacity}%]"
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    // "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
  },
  "battery#bat2": {
    "bat": "BAT2"
  },
  "idle_inhibitor": {
    "format": "<span color='#589df6'>{icon}</span>",
    "format-icons": {
      "activated": "ï®",
      "deactivated": "ï°"
    },
    "on-click-right": "swaylock"
  },
  "tray": {
    // "icon-size": 21,
    "spacing": 10
  },
  "custom/media": {
    "format": "{icon} {}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ï†¼",
      "default": "ğŸœ"
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
    // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  },
  "mpd": {
    "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ï€",
    "format-disconnected": "Disconnected ï€",
    "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ï€",
    "unknown-tag": "N/A",
    "interval": 2,
    "consume-icons": {
      "on": "ïƒ„ "
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\">ï´</span> ",
      "on": "ï´ "
    },
    "repeat-icons": {
      "on": "ï€ "
    },
    "single-icons": {
      "on": "ï€1 "
    },
    "state-icons": {
      "paused": "ïŒ",
      "playing": "ï‹"
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)"
  }
}
